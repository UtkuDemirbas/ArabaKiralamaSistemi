
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    <script type="text/javascript">
        function kapat() {
            setTimeout("document.getElementById('hata').style.visibility = 'hidden'", 3000);
        }
    </script>
    @if (ViewBag.Message != null)
    {
        <script>
                Swal.fire({
                    position: 'top-end',
                    icon: 'error',
                    title: 'Lütfen bilgileriniz kontrol ediniz',
                    showConfirmButton: false,
                    timer: 2000
                })
        </script>
        ViewBag.Message = null;
    }
    @if (Session["message"] != null)
    {
        if (Session["message"].ToString() == "addcustomer")
        {
            <script>
                Swal.fire({
                    position: 'top-end',
                    icon: 'success',
                    title: 'Kayıt işlemini başarıyla gerçekleştirdiniz',
                    showConfirmButton: false,
                    timer: 2000
                })
            </script>
        }
        else if (Session["message"].ToString() == "updatecustomer")
        {
            <script>
                Swal.fire({
                    position: 'top-end',
                    icon: 'success',
                    title: 'Bilgileriniz güncellendi.Tekrar giriş yapmalısınız',
                    showConfirmButton: false,
                    timer: 2000
                })
            </script>
        }
        Session["message"] = null;

    }


</head>


<body onload="kapat()">
    <section id="page-title-area" class="section-padding overlay">
        <div class="container">
            <div class="row">
                <!-- Page Title Start -->
                <div class="col-lg-12">
                    <div class="section-title  text-center">
                        <h2>GİRİŞ</h2>
                        <span class="title-line"><i class="fa fa-car"></i></span>
                        <p>Bizi tercih ettiğiniz için teşekkürler...</p>
                    </div>
                </div>
                <!-- Page Title End -->
            </div>
        </div>
    </section>
    <!--== Page Title Area End ==-->
    <!--== Login Page Content Start ==-->
    <section id="lgoin-page-wrap" class="section-padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-8 m-auto">
                    <div class="login-page-content">
                        <div class="login-form">
                            <h3>HOŞGELDİNİZ</h3>
                            <form method="post">
                                <div class="username">
                                    <input type="text" name="username" placeholder="Username" autocomplete="off" maxlength="20" required>
                                </div>
                                <div class="password">
                                    <input type="password" name="sifre" placeholder="Password" autocomplete="off" maxlength="20" required>
                                </div>
                                <div class="log-btn">
                                    <button type="submit"><i class="fa fa-sign-in"></i> Giriş</button>
                                </div>
                            </form>
                            
                            
                        </div>

                       
                        <div class="create-ac">
                            <p>Henüz bir hesabınız yoksa? <a href="@Url.Action("AddCustomer", "Customer")">Kayıt Ol</a></p>
                        </div>
                        <div class="login-menu">
                            <a href="@Url.Action("About","About")">Hakkımızda</a>
                            <span>|</span>
                            <a href="@Url.Action("Contact", "Contact")">İLETİŞİM</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>

