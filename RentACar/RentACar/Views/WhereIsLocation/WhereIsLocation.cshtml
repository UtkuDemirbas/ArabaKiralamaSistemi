@model IEnumerable<string>
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    @if (Session["message"] != null)
    {
        if (Session["message"].ToString() == "login")
        {
            <script>
                Swal.fire({
                    position: 'top-end',
                    icon: 'success',
                    title: 'Giriş Başarılı',
                    showConfirmButton: false,
                    timer: 2000
                })
            </script>
        }
        if (Session["message"].ToString() == "date")
        {
            <script>
                Swal.fire({
                    position: 'top-end',
                    icon: 'error',
                    title: 'Lütfen tarihleri kontrol ediniz.Tarihler aynı olamaz',
                    showConfirmButton: false,
                    timer: 2000
                })
            </script>
        }
        Session["message"] = null;

    }
</head>

<body>
    <!--== Slider Area Start ==-->
    <section id="slider-area">
        <!--== slide Item One ==-->
        <div class="single-slide-item overlay">
            <div class="container">
                <div class="row">
                    <div class="col-lg-5">
                        <div class="book-a-car">
                            <form method="post">
                                <!--== Pick Up Location ==-->
                                <div class="pickup-location book-item">
                                    <h4>ALIŞ YERİ:</h4>
                                    <select class="custom-select" name="pickupLocation" required>
                                        @foreach (var item in Model)
                                        {
                                        <option>@item</option>
                                        }
                                    </select>
                                </div>
                                <!--== Pick Up Location ==-->
                                <div class="pickup-location book-item">
                                    <h4>VERİŞ YERİ:</h4>
                                    <select class="custom-select" name="returnLocation" required>
                                        @foreach (var item in Model)
                                        {
                                        <option>@item</option>
                                        }
                                    </select>
                                </div>
                                <!--== Pick Up Date ==-->
                                <div class="pick-up-date book-item">
                                    <h4>ALIŞ TARİHİ:</h4>
                                    <input   name="startDate" placeholder="Pick Up Date" autocomplete="off" required />

                                    <div class="return-car">
                                        <h4>VERİŞ TARİHİ:</h4>
                                        <input   name="endDate" placeholder="Return Date" autocomplete="off" required />
                                    </div>
                                </div>
                                <!--== Pick Up Location ==-->
                                <div class="book-button text-center">
                                    <button class="book-now-btn">Devam Et</button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <div class="col-lg-7 text-right">
                        <div class="display-table">
                            <div class="display-table-cell">
                                <div class="slider-right-text">
                                    <h1>ARAÇ KİRALAMAK İÇİN GÜZEL BİR GÜN!</h1>
                                    <p>ÇOK UYGUN FİYATLARLA BAŞLAYAN ARAÇLAR SİZLERLE</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--== slide Item One ==-->
    </section>
    <!--== Slider Area End ==-->
    <!--== About Us Area Start ==-->
    <section id="about-area" class="section-padding">
        <div class="container">
            <div class="row">
                <!-- Section Title Start -->
                <div class="col-lg-12">
                    <div class="section-title  text-center">
                        <h2>HAKKIMIZDA</h2>
                        <span class="title-line"><i class="fa fa-car"></i></span>
                        <p>Bizi tercih ettiğiniz için teşekkürler</p>
                    </div>
                </div>
                <!-- Section Title End -->
            </div>

            <div class="row">
                <!-- About Content Start -->
                <div class="col-lg-6">
                    <div class="display-table">
                        <div class="display-table-cell">
                            <div class="about-content">
                                <p>
                                    Kiraladığınız araçla ilgili herhangi bir endişe duymamanız için tüm araçlarımız, her bir kiralama öncesinde güvenlik açısından kontrol edilmekte ve temizlenmektedir.
                                    Ve filomuzu sürekli olarak yenilediğimizden düşük fiyatlara en son model araçları kullanıyor olacaksınız.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- About Content End -->
                <!-- About Video Start -->
                <div class="col-lg-6">
                    <div class="about-video">
                        <iframe width="560" height="315" src="https://www.youtube-nocookie.com/embed/8Bs9_VGFQVo?controls=0" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                    </div>
                </div>
                <!-- About Video End -->
            </div>
        </div>
    </section>
    <!--== About Us Area End ==-->
</body>

